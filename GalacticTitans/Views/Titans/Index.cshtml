    <div class="h1 gTZRG">Your Titans:</div>
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    @* Later, once images have been implemented, add image here aswell *@
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Level</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var titan in Model)
            {
                <tr>
                    @* Later, once images have been implemented, add image here aswell *@
                    <td>@rowNumber</td>
                    <td>@titan.TitanName</td>
                    <td>@titan.TitanType</td>
                    <td>@titan.TitanLevel</td>
                </tr>
                rowNumber++;
            }
        </tbody>
        </table>
    </form>
