@model IEnumerable<GalacticTitans.Models.Titans.TitanIndexViewModel>

@{
    int rowNumber = 1;
    int currentRow = 1;
    int currentTile = 1;
    int tilesInRow = 6;
}
    <div>
        <svg width="120" height="120">
        <a asp-action="Add" asp-controller="Titans" type="submit" class="gButton1 gButton1-normal">
