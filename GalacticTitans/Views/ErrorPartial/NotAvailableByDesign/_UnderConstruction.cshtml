@{
    List<string> errordatas = ViewBag.ErrorDatas;
    bool IsThereData = false;
    if (errordatas != null)
    {
        IsThereData = true;
    }
}

<p class="gTZRG">
    <span class="gWmc">Apologies for the inconvenience, but this area is currently under construction.</span>
    <br />
    @{
        if (IsThereData)
        {
            <span class="gWmc">Please check back later. EMC: 00-?? "under construction", data given:</span><br />
            <table>
                @for (int i = 0; i < errordatas.Count(); i += 2)
            {
                <tr>
                    <td>@Html.Display(errordatas[i])</td>
                    <td>@Html.Display(errordatas[i+1])</td>
                </tr>
            }
            </table>
        }
        else
        {
            <span class="gWmc">Please check back later. EMC: 00-00 "under construction", no data given.</span>
        }
    }
</p>